extends demo

block styles
  link(rel='stylesheet' href='https://rawgit.com/minimalist-components/angular-mn-date/master/docs/vendor.css')

block scripts
  script(src='https://rawgit.com/minimalist-components/angular-mn-date/master/docs/vendor.js')
  script(src='https://rawgit.com/minimalist-components/angular-mn-date/master/dist/angular-mn-date.js')



//- html(ng-app='app')
  meta(name='viewport' content='width=device-width, user-scalable=no')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css')
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans')
  link(rel='stylesheet' href='styles/vendor.css')
  link(rel='stylesheet' href='angular-mn-date.css')
  style.
    body {
      font-family: 'Open Sans', sans-serif;
      -webkit-font-smoothing: antialiased;
    }

//- body
  form(ng-controller='IndexController as controller' name='form' novalidate)
    h2 mn-date
    div
      mn-date(placeholder='Amount' ng-model='controller.date' name='Date')

      p date: {{ controller.date }}
    
    button(type='submit') Submit

  script(src='vendor.js')
  script(src='angular-mn-date.js')
  script.
    angular.module('app', [
      'mn-date',
    ]);

    angular
      .module('app')
      .controller('IndexController', IndexController);

    function IndexController() {
      this.date = new Date('1990-9-4')
    }

